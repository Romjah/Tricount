{% extends 'base.html.twig' %}

{% block title %}Settlement index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            background-color: #f2f2f2;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #1d1d1d;
        }

        .table {
            background-color: #fff;
        }

        .table th, .table td {
            border: none;
        }

        .table th {
            background-color: #2c3e50;
            color: #fff;
        }

        /* Liens "show" et "edit" */
        .btn-show {
            background-color: #3498db;
            border-color: #3498db;
            color: #fff;
        }

        .btn-show:hover {
            background-color: #2980b9;
            border-color: #2980b9;
            color: white;
        }

        .btn-edit {
            background-color: #f1c40f;
            border-color: #f1c40f;
            color: #fff;
            margin-left: 10px;
        }

        .btn-edit:hover {
            background-color: #d4ac0d;
            border-color: #d4ac0d;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Settlement index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Receiver</th>
                    <th>Sender</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for settlement in settlements %}
                <tr>
                    <td>{{ settlement.id }}</td>
                    <td>{{ settlement.amount }}</td>
                    <td>{{ settlement.CreateDateTime ? settlement.CreateDateTime|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ settlement.payee }}</td>
                    <td>{{ settlement.payer }}</td>
                    <td>
                        <a href="{{ path('app_settlement_show', {'id': settlement.id}) }}" class="btn btn-show">show</a>
                        <a href="{{ path('app_settlement_edit', {'id': settlement.id}) }}" class="btn btn-edit">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_settlement_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
