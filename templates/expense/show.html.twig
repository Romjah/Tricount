{% extends 'base.html.twig' %}

{% block title %}Détails de la dépense{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            background-color: #f2f2f2;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #1d1d1d;
        }

        .table {
            background-color: #fff;
        }

        .table th, .table td {
            border: none;
        }

        .table th {
            background-color: #2c3e50;
            color: #fff;
        }

        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

        .btn-warning {
            background-color: #f1c40f;
            border-color: #f1c40f;
            color: #fff;
        }

        .btn-warning:hover {
            background-color: #d4ac0d;
            border-color: #d4ac0d;
        }

        .btn-success {
            background-color: #27ae60;
            border-color: #27ae60;
            color: #fff;
        }

        .btn-success:hover {
            background-color: #219a52;
            border-color: #219a52;
        }

        .center-content {
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de la dépense</h1>

        <table class="table center-content">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ expense.id }}</td>
                </tr>
                <tr>
                    <th>Montant</th>
                    <td>{{ expense.amout }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ expense.description }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ expense.date ? expense.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_expense_index') }}" class="btn btn-primary">Retour à la liste</a>

        <a href="{{ path('app_expense_edit', {'id': expense.id}) }}" class="btn btn-warning">Modifier</a>

        {{ include('expense/_delete_form.html.twig') }}
    </div>
{% endblock %}
