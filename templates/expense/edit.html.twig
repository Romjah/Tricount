{% extends 'base.html.twig' %}

{% block title %}Edit Expense{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Votre style personnalisé ici */
        .container {
            background-color: #f2f2f2;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #1d1d1d;
        }

        /* Style pour le formulaire */
        .custom-form {
            /* Ajoutez vos styles personnalisés ici */
        }

        /* Style pour les widgets de formulaire (champs de texte, etc.) */
        .custom-form-widget {
            /* Ajoutez vos styles personnalisés ici */
        }

        /* Style pour le bouton "Save" */
        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

        /* Style pour le bouton "Back to list" */
        .btn-back {
            background-color: #27ae60;
            border-color: #27ae60;
            color: #fff;
        }

        .btn-back:hover {
            background-color: #219a52;
            border-color: #219a52;
        }

        /* Le reste de votre style ici */
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Expense</h1>

        <form method="post" action="{{ path('app_expense_edit', {'id': expense.id}) }}" class="custom-form">
            {{ include('expense/_form.html.twig', {'button_label': 'Update'}) }}

            <div class="form-actions">
                <a href="{{ path('app_expense_index') }}" class="btn btn-back">Back to list</a>
            </div>
        </form>
    </div>
{% endblock %}
