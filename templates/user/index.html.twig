{% extends 'base.html.twig' %}
{% block content %}
    {% block title %}Liste des utilisateurs{% endblock %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
            .container {
                background-color: #f2f2f2;
                padding: 20px;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            h1 {
                color: #1d1d1d;
            }

            .table {
                background-color: #fff;
            }

            .table th, .table td {
                border: none;
            }

            .table thead th {
                background-color: #2c3e50;
                color: #fff;
            }

            .btn-primary {
                background-color: #3498db;
                border-color: #3498db;
                color: #fff;
            }

            .btn-primary:hover {
                background-color: #2980b9;
                border-color: #2980b9;
            }

            .btn-warning {
                background-color: #f1c40f;
                border-color: #f1c40f;
                color: #fff;
            }

            .btn-warning:hover {
                background-color: #d4ac0d;
                border-color: #d4ac0d;
            }

            .btn-success {
                background-color: #27ae60;
                border-color: #27ae60;
                color: #fff;
            }

            .btn-success:hover {
                background-color: #219a52;
                border-color: #219a52;
            }

            .center-table {
                text-align: center;
                margin: 0 auto;
            }
        </style>
    {% endblock %}

    {% block body %}
        <div class="container mt-4">
            <h1>Liste des utilisateurs</h1>

            <table class="table table-striped center-table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.telephone }}</td>
                        <td>{{ user.CreateDateTime ? user.CreateDateTime|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">Voir</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_user_new') }}" class="btn btn-success">Créer un nouvel utilisateur</a>
        </div>
    {% endblock %}
{% endblock %}